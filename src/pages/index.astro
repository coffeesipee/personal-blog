---
import BaseLayout from '@src/layouts/BaseLayout.astro';
import getBlogData from '@src/utils/getBlogData';
import getLatestPosts from '@src/utils/getLatestPosts';
import LatestPosts from '@src/components/PostList.astro';
import AuthorArea from '@src/components/AuthorArea.astro';
import getAuthorData from '@src/utils/getAuthorData';

const blogData = await getBlogData();
const posts = await getLatestPosts();
const authorData = await getAuthorData();
---

<BaseLayout
  seoTitle={blogData.title}
  seoDescription={blogData.about.text}
  seoImage={blogData.ogImageUrl}
  seoPageType="website"
>
  <div class="flex flex-col gap-14">
    <AuthorArea author={authorData} />
    <h2 class="text-3xl font-extrabold md:text-4xl">Latest Blog Posts</h2>
    <LatestPosts posts={posts} />
  </div>
</BaseLayout>
